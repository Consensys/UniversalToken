{
  "name": "boilerplate-solidity",
  "version": "0.1.0-dev",
  "description": "Solidity Smart-Contract-Boilerplate",
  "files": [
    "contracts",
    "tests"
  ],
  "scripts": {
    "coverage": "solidity-coverage",
    "lint": "eslint ./migrations ./test ",
    "lint:fix": "eslint ./test ./migrations --fix",
    "lint:sol": "solium -d .",
    "lint:sol:fix": "solium -d . --fix",
    "lint:all": "npm run lint && npm run lint:sol",
    "lint:all:fix": "npm run lint:fix && npm run lint:sol:fix",
    "console": "truffle console",
    "version": "scripts/version.js",
    "remixd": "./node_modules/remixd/bin/remixd -s ./contracts"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/ConsenSys/mesh/boilerplates/solidity/boilerplate-solidity.git"
  },
  "keywords": [
    "boilerplate",
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "security"
  ],
  "author": "Nicolas Maurice <nicolas.maurice@consensys.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/ConsenSys/mesh/boilerplates/solidity/boilerplate-solidity/issues"
  },
  "homepage": "https://gitlab.com/ConsenSys/mesh/boilerplates/solidity/boilerplate-solidity",
  "devDependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.23.0",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.0.0",
    "chai-bignumber": "^2.0.0",
    "coveralls": "^2.13.1",
    "dotenv": "^4.0.0",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "ethereumjs-util": "^5.1.2",
    "ethjs-abi": "^0.2.1",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "openzeppelin-solidity": "git://github.com/OpenZeppelin/openzeppelin-solidity#2d30918149c1d61da3cf52d20f2381574b80cf33",
    "remixd": "git://github.com/ethereum/remixd.git",
    "solidity-coverage": "^0.5.0",
    "solium": "^1.1.7",
    "solium-plugin-zeppelin": "^0.0.2",
    "truffle": "^4.1.8",
    "truffle-hdwallet-provider": "0.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "truffle test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint ./test ./migrations --fix",
      "git add"
    ],
    "*.sol": [
      "solium -d . --fix",
      "git add"
    ]
  },
  "dependencies": {
    "contract-certificate-controller": "git+ssh://git@gitlab.com:ConsenSys/client/fr/dauriel/contract-certificate-controller.git#b3d004695606a1780dfd9f50a824b713a7400516"
  }
}
